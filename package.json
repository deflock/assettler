    "test": "jest",
    "cover": "jest --coverage",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lerna": "^3.8.0"
  }
}
