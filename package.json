{
  "name": "assettler",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=8.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --concurrency 1",
    "clean": "lerna clean",
